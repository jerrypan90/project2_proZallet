<h1>Update Monthly Budget</h1>

<table border="solid">
    <tr>
        <th>Category</th>
        <th>Budget</th>
    </tr>
    {{#each budget}}
    <tr>
        <td>{{this.category}}</td>
        <td>{{this.budget}}</td>
    </tr>
    {{/each}}
</table>
<br>

<form class="userForm" method="POST" action="/user/budget/{{userId}}">
    <div class="userAttribute">
        Account Number:
        <input name="accountNumber" type="type" value="{{userId}}" readonly />
    </div>
    <br>
    <div class="userAttribute">
        Category:
        <input name="category" type="type" />
    </div>
    <br>
    <div class="userAttribute">
        Budget:
        <input name="budget" type="type" />
    </div>
    <br>
    <input name="submit" type="submit" value="Add" />
</form>